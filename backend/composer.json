{
    "name": "aless/backend",
    "description": "E-Commerce realizzato con PHP Vanilla e JavaScript Vanilla",
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Alessandro",
            "email": "alessandro.mattera04@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "bramus/router": "^1.6",
        "monolog/monolog": "^3.0",
        "symfony/validator": "^7.4",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
